    <!-- ChoseUs Section Begin -->
    <section class="choseus-section spad">
        <div class="container">

                 {% for message in app.flashes('danger') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}

                {% for message in app.flashes('Danger') %}
                            <div class="alert alert-danger">
                                {{ message }}
                            </div>
                {% endfor %}

                {% for message in app.flashes('Success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('Warning') %}
                            <div class="alert alert-warning">
                                {{ message }}
                            </div>
                {% endfor %}
            
                <form  method="post">

                    {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    
                     {% if app.user and app.user.isVerified == false %}
                        <div class="alert alert-warning alert-dismissible" role="alert">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" 
                            aria-label="close"></button>
                            <div class="alert-message">
                                <strong>Votre compte n'est pas activé </strong>, 
                                <a href="{{ path('resend_verif') }}">renvoyer le lien d'activation</a>
                            </div>
                        </div>
                        {% endif %}
                        
                        
                       

                        <div class="fs-widget"style="padding-top: 25px;">
                            <h4>Please sign in</h4>
                        </div>
                        <div class="fs-widget"> 
                            <h4>Email</h4> 
                            <label for="inputEmail">
                                <input type="email" value="{{ last_username }}"  name="email" id="inputEmail" class="form-control" style="width:600px" autocomplete="email" required autofocus>
                            </label>
                        </div>
                        
                        <div class="fs-widget"> 
                            <h4>Password</h4> 
                            <label for="inputPassword"> 
                                <input type="password" name="password" id="inputPassword " class="form-control" style="width:600px" autocomplete="current-password" required>
                            </label>
                        </div>

                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >

                        <button class="btn btn-lg btn-primary " type="submit" style="width:600px;background-color: #E36414; border-color: orange;">
                            Se connecter
                        </button>

                        <div class="fs-widget p-3">
                            <p class="small mb-0" style="color:#ffc800;"><b>Tu n'a pas de compte ? </b><a href="{{ path('app_registre')}}" style="color:white;"><b> Créer un compte !</b></a></p>
                        </div>
                    
                        <a href="{{ path('app_task') }}" align="start"><b>Retour à la page d'accueil</b></a>
                        <a href="{{ path('app_oublie_pass') }}" align="end"><b>Mot de passe oublié</b></a>
                    </form>
